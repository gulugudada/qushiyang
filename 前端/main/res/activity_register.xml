<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.RegisterActivity"
    android:background="@drawable/zhuce">

    <LinearLayout
        android:id="@+id/loginPanel2"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:background="@drawable/background_login_div" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="注册"
            android:textSize="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:background="@drawable/background_edit_login"
            android:hint="用户名"
            android:ems="10" >
        </EditText>

        <EditText
            android:id="@+id/pwdEt1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:password="true"
            android:background="@drawable/background_edit_login"
            android:hint="密码"
            android:ems="10" />

        <EditText
            android:id="@+id/phone1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:background="@drawable/background_edit_login"
            android:hint="电话号码"
            android:ems="10" >

        </EditText>


        <LinearLayout
            android:id="@+id/loginPanel3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_login_div" >

            <EditText
                android:id="@+id/verify"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:background="@drawable/background_edit_login"
                android:hint="请输入验证码"
                android:ems="10" />

            <Button
                android:id="@+id/verBtn"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_button_div"
                android:text="获取验证码" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1" />

        </LinearLayout>


        <Button
            android:id="@+id/regBtn1"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_button_div"
            android:text="注册" />

    </LinearLayout>

</RelativeLayout>